<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Question">
	
	<!-- 게시물 수 -->
    <select id="question_list_count" resultType="int">
    	select count(question_id) from question
    </select>
    
    <!-- 게시판 목록 -->
    <select id="question_list" parameterType="int" resultType="question">
   	 	<![CDATA[
		select * from 
		 (select rownum rnum, product_id, question_id, question_content, question_subject, question_date, question_state, question_type
		 from (select * from question order by question_id desc)) 
	   		 where rnum < 12
		]]>
    </select>
    
    <!-- 세부내용 -->
<!--     <select id="questionDetail" parameterType="int" resultType="question">
    	select * from question where question_id = #{question_id}
    </select> -->
    
</mapper>
