<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Review">
	
	<!-- 게시물 수 -->
    <select id="review_list_count" resultType="int">
    	select count(review_id) from review
    </select>
    
    <!-- 게시판 목록 -->
    <select id="review_list" parameterType="int" resultType="review">
   	 	<![CDATA[
		select * from 
		 (select rownum rnum, review_id, product_id, review_img, review_subject, review_content, review_date
		 from (select * from review order by review_id desc)) 
	   		 where rnum >= 1
		]]>
    </select>
    
    <select id="product_name" parameterType="Review" resultType="String">
    	select product_name from product p, review r where p.product_id = r.product_id
    </select>
    
    <select id="review_content" parameterType="int" resultType="review">
    	select review_content from review
    </select>
    
</mapper>
